# Environment Configuration for LifeHackAI

# API Configuration
API_HOST=localhost
API_PORT=8000
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///lifehackai.db
DB_ECHO=false

# AI Configuration (for future OpenAI integration)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Automation Configuration
AUTOMATION_ENABLED=true
AUTOMATION_LOG_LEVEL=INFO
AUTOMATION_TIMEOUT=300

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=lifehackai.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Task Configuration
DEFAULT_TASK_DURATION=60
MAX_TASKS_PER_PLAN=10
TASK_REMINDER_ADVANCE=15

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CACHE_TTL=3600